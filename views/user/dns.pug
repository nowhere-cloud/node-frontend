extends ../layouts/normal

block extra-stylesheet
  link(rel="stylesheet", href="//cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css")

block menu
  include ../includes/common-topbar-user

block breadcrumb
  +breadcrumb-item("/users", "Operations Hub")

block content
  .container
    h1= title
    p Manage your internal DNS Alias here.
  .container.hidden-md-down
    if errorMessage.length
      .alert.alert-danger !{errorMessage}
    if successMessage.length
      .alert.alert-success !{successMessage}
    .card
      table.table#dns-loadhere
        tbody
          tr
            td(colspan="7")
              include ../includes/loading-bar
      .card-footer
        button.mb-0.btn.btn-block.btn-primary(type="button", data-toggle="modal" data-target="#NewDNS") New Entry
  include ../includes/mobile_not_supported
  include _partials/dns-form
  include _partials/dns-edit
block additional-libraries
  script(src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js")
  script(src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js")
  script(src='/users/assets/elma.js')
