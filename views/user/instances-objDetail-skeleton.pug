extends ../layouts/normal

block menu
  include ../includes/common-topbar-user

block breadcrumb
  +breadcrumb-item("/users", "Operations Hub")
  +breadcrumb-item("/users/instances", "Virtual Machines")

block content
  .container
    h1= title
    p#uuid= uuid
  .container.hidden-md-down
    .card
      if type === 'vm'
        include ../_partials/vm-partials/vm
      if type === 'vm-templates'
        include ../_partials/vm-partials/vm-tpl
      if type === 'net'
        include ../_partials/vm-partials/net
      if type === 'vif'
        include ../_partials/vm-partials/vif
  include ../includes/mobile_not_supported-f
  
block additional-libraries
  if type === 'vm'
    script(src='/users/assets/heute.js')
